<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="FB">

	<typeAlias alias="LookupCodeVO"			type="com.systex.emp.manager.vo.LookupCodeVO"/>
	<typeAlias alias="DeptVO"				type="com.systex.emp.manager.vo.DeptVO"/>
	<typeAlias alias="UserVO"				type="com.systex.emp.manager.vo.UserVO"/>
	<typeAlias alias="KioskVO"				type="com.systex.emp.manager.vo.KioskVO"/>
	
	<select id="selectLookupCode" parameterClass="map" resultClass="LookupCodeVO">
		select code, value, label from tb_tcs_lookup_code where module = #module# and type = #type#
		<isNotNull property="code" prepend="and"> code = #code#</isNotNull>
		order by display_order
	</select>
	
</sqlMap>